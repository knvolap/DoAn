@model Models.EF.ThongTinCaNhan

@{
    ViewBag.Title = "EditTK";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật tài khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdTTCN)

    <div class="form-group">
        <div class="col-md-10">
            <label for="exampleText" class="">Phân quyền</label>
            @Html.DropDownList("IdQuyen", ViewBag.IdQuyen as SelectList, htmlAttributes: new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.idQuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label for="exampleText" class="">Tài khoản</label>
            @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label for="exampleText" class="">Mật khẩu</label>
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @Type = "password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger", @Type = "password" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label for="exampleText" class="">Trạng thái</label>
            @Html.DropDownListFor(model => model.trangThai, new[] { new SelectListItem { Text = "Kích hoạt", Value = "True" }, new SelectListItem { Text = "Khóa", Value = "False" } }, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.trangThai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="mt-2 btn btn-primary"> <i class="fa fa-save" type="submit"></i> Lưu</button>
        </div>
    </div>
</div>
}
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button class="mb-2 mr-2 btn-transition btn btn-outline-info">
            @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "mb-2 mr-2 btn btn-success" })
        </button>
    </div>
</div>
