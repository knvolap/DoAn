@model Models.EF.BenhVien

@{
    ViewBag.Title = "EditBV";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật thông tin</h2>

@using (Html.BeginForm("EditBV", "BenhVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Mã bệnh viện
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.IdBenhVien)
                </dd>
                <dt>
                    Tên bệnh viện
                </dt>
                <dd>
                    @Html.EditorFor(model => model.TenBenhVien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenBenhVien, "", new { @class = "text-danger" })
                </dd>
                <dt>
                    Email
                </dt>
                <dd>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </dd>
                <dt>
                    Số điện thoại
                </dt>
                <dd>
                    @Html.EditorFor(model => model.soDTBV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.soDTBV, "", new { @class = "text-danger" })
                </dd>
                <dt>
                    Địa chỉ
                </dt>
                <dd>
                    @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
                </dd>
                <dt>
                    Trạng thái
                </dt>
                <dd>
                    @*@Html.DisplayFor(model => model.Status)*@
                    @Html.DropDownListFor(modelItem => modelItem.trangThai, new[] {
                   new SelectListItem { Text = "Hoạt động", Value = "True" },
                   new SelectListItem { Text = "Không hoạt động", Value = "False" } },
                   new { @disabled = "disabled" })
                </dd>

            </dl>
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Minh chứng
                </dt>
                <dd>
                    <ul>
                        <li> <img style="width:500px;height: 600px ; object-fit: cover" src="~/FileUpLoad/benhvien/@Model.minhChung" /></li>
                        <li> @Html.DisplayFor(model => model.minhChung) </li>
                    </ul>
                </dd>

                <div class="form-group">
                    <div class="col-md-10">
                        <label for="exampleFile" class="">Minh chứng</label>
                        <input name="file" id="exampleFile" type="file" class="form-control-file">
                    </div>
                </div>



            </dl>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="mt-2 btn btn-primary"> <i class="fa fa-save" type="submit"></i> Lưu</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
