        <div class="form-group">
            <label>Tên đợt hiến máu</label>
            <div class="col-md-10">
                @Html.DropDownList("idDHM", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idDHM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên đơn vị liên kết</label>
            <div class="col-md-10">
                @Html.DropDownList("idDVLK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idDVLK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idBenhVien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idBenhVien", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idBenhVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.trangThai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.trangThai)
                    @Html.ValidationMessageFor(model => model.trangThai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
