@model Models.EF.DonViLienKet
@{
    ViewBag.Title = "Cập nhật thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Thông tin đơn vị</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(function () {
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(5000).slideUp(500);
    });
</script>

<section class="blog_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @RenderPage("_leftMenu2.cshtml")
            </div>

            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">
                    <h3 class="mb-30">Cập nhật thông đơn vị</h3>
                    <hr />
                    <div class="panel-body">
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                @TempData["AlertMessage"]
                            </div>
                        }
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-lg-12 col-md-8">

                                <form action="#">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "form-control" })
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Mã đơn vị</label>

                                                        @Html.EditorFor(model => model.IdDVLK, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Tên đơn vị</label>
                                                        @Html.EditorFor(model => model.TenDonVi, new { htmlAttributes = new { @class = "form-control" } })
                                                    </div>
                                                </th>
                                            </tr>
                                           
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Email</label>
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Số điện thoại</label>
                                                        @Html.EditorFor(model => model.soDT, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.soDT, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                            </tr>
                                           
                                        </table>
                                        <div class="mt-10">
                                            <label>Địa chỉ</label>
                                            @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control" } })

                                        </div>

                                        <div class="mt-10">
                                            <label>Minh chứng</label>
                                            <input type="file" name="file" placeholder="Minh chứng"
                                                   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Minh chứng'" required
                                                   class="single-input">
                                        </div>
                                        <div class="text-center " style="margin-top:20px">
                                            <a class="genric-btn primary-border radius"  >Cập nhật</a>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                        <hr />
                        <h2>Lưu ý</h2>
                        <table class="mt-10">
                            <tr>
                                <th style="width:400px">
                                    <div>
                                        <a>Điền đẩy đủ các thông tin ở trên</a>
                                    </div>
                                </th>
                                <th class="col-lg-6">
                                    <div>
                                        <a>Số điện thoại : từ 8-12 số</a>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th style="width:400px">
                                    <div>
                                        <a>File minh chứng thuộc định dạng: pdf, doc, docx , png, jgp </a>
                                    </div>
                                </th>
                                <th class="col-lg-6">
                                    <div>
                                        <a>Địa chỉ: tại thành phố Đà Nẵng</a>
                                    </div>
                                </th>
                            </tr>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



