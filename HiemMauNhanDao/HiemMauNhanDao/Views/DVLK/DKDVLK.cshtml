@model Models.EF.DonViLienKet
@{
    ViewBag.Title = "Đăng ký đơn vị liên kết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Đăng ký liên kết</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(5000).slideUp(500);
    });
</script>
<section class="blog_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @RenderPage("_leftMenu2.cshtml")
            </div>

            <div class="col-lg-8 mb-5 mb-lg-0">
                <div>
                    <h3 class="mb-30">Đăng ký đơn vị liên kết</h3>
                    <hr />
                    <div class="panel-body">
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                @TempData["AlertMessage"]
                            </div>
                        }
                    </div>

                    <div>
                        @using (Html.BeginForm("DKDVLK", "DVLK", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="panel-body" style="font-weight: bold; text-align: center; color: red">
                                @if (@ViewBag.ThongBao != null)
                                {
                                    <label>@ViewBag.ThongBao </label>
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-8">
                                    <form action="#">
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>

                                                        <label>Mã người dùng</label>
                                                        @Html.EditorFor(model => model.idTTCN, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.IdUser } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Tên đơn vị</label>
                                                        @Html.EditorFor(model => model.TenDonVi, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.TenDonVi, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Email</label>
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Số điện thoại</label>
                                                        @Html.EditorFor(model => model.soDT, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.soDT, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table>
                                            <tr>
                                                <th style="width:735px">
                                                    <label>Địa chỉ</label>
                                                    @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "single-input", @type = "text" } })
                                                    @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })


                                                </th>
                                            </tr>
                                        </table>
                                        <table>
                                            <tr>
                                                <th style="width:735px">
                                                    <label for="exampleFile" class="">Minh chứng</label>
                                                    <input name="file" id="exampleFile" type="file" class="form-control-file">                                                  
                                                    @*@Html.EditorFor(model => model.minhChung, new
        { htmlAttributes = new { @class = "form-control", @name = "file", @id = "exampleFile", @type = "file" } })*@

                                                </th>
                                            </tr>
                                        </table>
                                        @Html.HiddenFor(model => model.trangThai)

                                    </form>
                                    <div class="text-center" style="margin-top:20px">
                                        <button type="submit" class="genric-btn primary-border radius"> Đăng ký liên kết</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <hr />
                <h2>Lưu ý</h2>
                <table class="mt-10">
                    <tr>
                        <th style="width:400px">
                            <div>
                                <a>Điền đẩy đủ các thông tin ở trên</a>
                            </div>
                        </th>
                        <th class="col-lg-6">
                            <div>
                                <a>Số điện thoại : từ 8-12 số</a>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th style="width:400px">
                            <div>
                                <a>File minh chứng thuộc định dạng: pdf, doc, docx , png, jgp </a>
                            </div>
                        </th>
                        <th class="col-lg-6">
                            <div>
                                <a>Địa chỉ: tại thành phố Đà Nẵng</a>
                            </div>
                        </th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>

 

