@model PagedList.IPagedList<Models.ViewModel.NhanVienView>
@using PagedList.Mvc
@using System.Data;
@{
    ViewBag.Title = "Xem nhiệm vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Nhiệm vụ </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_area section_padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-4">
                @RenderPage("_leftMenu2.cshtml")
            </div>
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Tìm kiếm</h5>
                        <form class="">
                            <div class="form-row">
                                <table class="mt-10">
                                    <tr>
                                        <th style="width:400px">
                                            <input   placeholder="Nội dung"
                                                   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nội dung '" required
                                                   class="single-input">
                                            @*<input name="searchString1" value="@ViewBag.SearchString1" id="exampleCity" type="text" class="form-control">*@
                                        </th>
                                        
                                    </tr>

                                </table>

                            </div>
                            <div>
                                <button type="submit" class="mt-2 btn btn-primary">
                                    <i class="fa fa-search"></i> Tìm kiếm
                                </button>

                                <button class="mb-2  btn btn-outline-danger" style="margin-top:18px"><i class="fa fa-times-circle"></i> Huỷ</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <table class="mb-0 table table-hover table table-bordered">
                            <tr class="text-center">
                                <th>
                                    STT
                                </th>
                                <th>
                                    Tên đợt tổ chức
                                </th>
                                <th>
                                    Tên nhân viên
                                </th>
                                <th>
                                    Nhiệm vụ
                                </th>
                            </tr>
                            @{ var i = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @item.tenDTCHM
                                        </td>
                                        <td>
                                            @item.hoTen
                                        </td>
                                        <td>
                                            @item.NhiemVu
                                        </td>
                                    </tr>
                                    i++;
                                }
                        </table>
                        <ul></ul>
                        @* @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))*@
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
