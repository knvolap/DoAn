@model PagedList.IPagedList<Models.ViewModel.NhanVienView>
@using PagedList.Mvc
@using System.Data;
@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Nhân viên y tế</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Blog Area =================-->
<section class="blog_area section_padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-4">
                @RenderPage("_leftMenu2.cshtml")
            </div>

            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="col-lg-12 col-md-8">
                    <h3 class="mb-30">Danh sách nhân viên</h3>

                    <hr>
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Tìm kiếm nhân viên</h5>
                            <form class="">
                                <div class="form-row">
                                    <table class="mt-10">
                                        <th style="width:400px">
                                            <input type="email" name="EMAIL" placeholder="Nội dung"
                                                   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nội dung '" required
                                                   class="single-input">
                                            @*<input name="searchString1" value="@ViewBag.SearchString1" id="exampleCity" type="text" class="form-control">*@
                                        </th>
                                        @*<th class="col-lg-6">
                                                <div>
                                                    <div class="icon"><i class="fa fa-plane" aria-hidden="true"></i></div>
                                                    <div class="form-select" id="default-select_1">
                                                        <select>
                                                            <option value=" 1">Đợt tổ chức</option>
                                                            <option value="1">Chưa chọn</option>
                                                            <option value="1">Hiến máu nhân đạo tháng 10</option>
                                                            <option value="1">Hiến máu nhân đạo tháng 11</option>
                                                            <option value="1">Hiến máu nhân đạo tháng 12</option>
                                                            <option value="1">Hiến máu nhân đạo tháng 01</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </th>*@
                                    </table>

                                </div>
                                <div>
                                    <button type="submit" class="mt-2 btn btn-primary">
                                        <i class="fa fa-search"></i> Tìm kiếm
                                    </button>

                                    <button class="mb-2  btn btn-outline-danger" style="margin-top:18px"><i class="fa fa-times-circle"></i> Huỷ</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div>
                        <div>
                            <table class="mb-0 table table-hover table table-bordered">
                                <tr class="text-center">
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Mã NV
                                    </th>
                                    <th>
                                        Tên nhân viên
                                    </th>
                                    <th>
                                        CCCD
                                    </th>
                                    <th>
                                        Chức vụ
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th>
                                        Chức năng
                                    </th>
                                </tr>
                                @{ var i = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                       
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @item.IdNVYT
                                        </td>
                                        <td>
                                            @item.hoTen
                                        </td>
                                        <td>
                                            @item.CCCD
                                        </td>
                                        <td>
                                            @item.tenChucVu.
                                        </td>
                                        <td class="text-center">
                                            <b href="#" class="btn-active" data-id="@item.IdNVYT">@Html.Raw(item.trangThai ? "Hoạt động" : "khóa")</b>
                                        </td>
                                        <td>
                                            <div>
                                                <button type="button" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown" class="mb-2 mr-2 dropdown-toggle btn btn-outline-alternate">Chọn</button>
                                                <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu" x-placement="right-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(105px, 0px, 0px);">
                                                    <button type="button" tabindex="0" class="dropdown-item pe-7s-pen"> @Html.ActionLink("Cấp quyền", "CapQuyenNVYT", new { id = item.IdTTCN })</button>
                                                    <button type="button" tabindex="0" class="dropdown-item pe-7s-news-paper"> @Html.ActionLink("Chi tiết", "Details", new { id = item.IdNVYT })</button>
                                                    <button type="button" tabindex="0" class="dropdown-item pe-7s-trash"> @Html.ActionLink(" Xóa", "Delete", new { id = item.IdNVYT })</button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </table>

                        </div>
                        <nav class="blog-pagination justify-content-center d-flex">
                            <ul class="pagination">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchStringBV, @class = "page-link" }))
                            </ul>
                        </nav>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/Assets/Admin/scripts/duyetNVYT.js"></script>
