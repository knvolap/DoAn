@model Models.EF.NhanVienYTe
@{
    ViewBag.Title = "LienKetNV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Thông tin bệnh viện</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(5000).slideUp(500);
    });
</script>
<section class="blog_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @RenderPage("_leftMenu2.cshtml")
            </div>

            <div class="col-lg-8 mb-5 mb-lg-0">
                <div>
                    <h3 class="mb-30">Cập nhật thông đơn vị</h3>
                    <hr />
                    <div class="panel-body">
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                @TempData["AlertMessage"]
                            </div>
                        }
                    </div>

                    <div>
                        @using (Html.BeginForm("DKDVLK", "DVLK", new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel-body" style="font-weight: bold; text-align: center; color: red">
                                @if (@ViewBag.ThongBao != null)
                                {
                                    <label>@ViewBag.ThongBao </label>
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-8">
                                    <form action="#">
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Mã người dùng</label>
                                                        @Html.EditorFor(model => model.idTTCN, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Tên bệnh viện</label>
                                                        @Html.EditorFor(model => model.idBenhVien, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.idBenhVien, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Chức vụ</label>
                                                        @Html.EditorFor(model => model.idChucVu, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.idChucVu, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>khoa</label>
                                                        @Html.EditorFor(model => model.khoa, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.khoa, "", new { @class = "text-danger" })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table>
                                            <tr>
                                                <th style="width:735px">
                                                    <label>Trình độ chuyên môn</label>
                                                    @Html.EditorFor(model => model.trinhDo, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.trinhDo, "", new { @class = "text-danger" })

                                                </th>
                                            </tr>
                                        </table>
                                        
                                   
                                    </form>
                                </div>
                            </div>
                            <div class="text-center " style="margin-top:20px">
                                <a class="genric-btn primary-border radius" href="#">Cập nhật</a>
                            </div>
                        }
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>




