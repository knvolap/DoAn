                                <label class="col-lg-1">
                                    @*@Html.RadioButtonFor(expression: model => model.hienMau, value: true)*@

                                    <div>
                                        <input class="primary-radio" type="radio" name="r29">
                                    </div>
                                </label>
                                <label class="col-md-1">
                                    @*@Html.RadioButtonFor(expression: model => model.hienMau, value: false)*@

                                    <div>
                                        <input class="primary-radio" type="radio" name="r29">
                                    </div>
                                </label>

                            </div>

                            <div class="form-group">
                                <label class="col-md-9 ">
                                    <p>
