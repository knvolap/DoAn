                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.noiHach, value: true)

                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.noiHach, value: false)

                                </label>
                            </div>

                            <div>
                                <label class="col-md-9 mt-10">
                                    <p> Xăm mình, xỏ lỗi qua da (tai, mũi...)</p>
                                </label>
                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.xamMinh, value: true)

                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.xamMinh, value: false)

                                </label>
