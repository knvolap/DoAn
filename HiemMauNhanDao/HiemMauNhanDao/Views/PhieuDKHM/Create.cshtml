                                <label class="col-md-0">
                                    <div class="">
                                    </div>
                                </label>
                                <label class="col-md-2 text-center">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.xacNhan)
                                                @Html.ValidationMessageFor(model => model.xacNhan, "", new { @class = "text-danger" })
                                            </div>
                                            <div>
                                                <h6>Tôi đồng ý</h6>
                                            </div>
                                        </div>
                                    </div>

                                </label>
                            </div>
