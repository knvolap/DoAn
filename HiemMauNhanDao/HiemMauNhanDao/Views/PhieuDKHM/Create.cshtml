                        </div>
                    </div>

                    <div class="form-group">
                        <label>id ttcn</label>
                        <div class="col-md-10">
                            @Html.DropDownList("idTTCN", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idTTCN, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 ">
                        <label class="col-md-9">
                            <h3>Nội dung</h3>
                        </label>
                        <label class="col-md-1 align-items-center">
                            <h3>Có </h3>
                        </label>
                        <label class="">
