                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.suDungMatuy, value: true)
                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.suDungMatuy, value: false)
                                </label>
                            </div>

                            <div>
