                                    <p> Được truyền máu hay chế phẩm máu</p>
                                </label>
                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.duocTruyenMau, value: true)

                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.duocTruyenMau, value: false)
                                </label>
                            </div>

                            <div>
                                <label class="col-md-9 mt-10">
                                    <p> Sử dụng ma túy, tiêm chích</p>
