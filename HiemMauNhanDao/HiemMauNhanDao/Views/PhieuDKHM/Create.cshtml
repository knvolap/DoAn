                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.biSot, value: false)
                                </label>
                            </div>

                            <div>
                                <label class="col-md-9 mt-10">
                                    <p> Dùng thuốc kháng sinh, ASPIRIN, CORTICOID...?</p>
                                </label>
                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.dungTKS, value: true)
                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.dungTKS, value: false)
                                </label>
                            </div>

                            <div>
                                <label class="col-md-9 mt-10">
                                    <p> Đến khám bác sĩ, làm xét nghiệm, chữa răng ?</p>
                                </label>
                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.chamCu, value: true)
                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.chamCu, value: true)
                                </label>
                            </div>

                            <div class="form-group" style="margin-top:10px">
                                <label class="col-md-9 ">
                                    <p>
                                        <b style="color:rgb(0, 0, 0);">
