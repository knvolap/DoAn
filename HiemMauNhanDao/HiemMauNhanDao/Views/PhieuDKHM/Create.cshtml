                                </label>
                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.QHTD, value: true)
                                </label>
                                <label class="col-md-1">
                                    @Html.RadioButtonFor(expression: model => model.QHTD, value: false)
                                </label>
                            </div>

                            <div>
                                <label class="col-md-9 mt-10">
                                    <p> Tiêm Vacxin phòng bệnh ?</p>
                                </label>
                                <label class="col-lg-1">
                                    @Html.RadioButtonFor(expression: model => model.tiemVacXin, value: true)
