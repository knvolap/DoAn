                                        <td>  @Html.RadioButtonFor(expression: model => model.tiemVacXin, value: false)</td>
                                    </tr>
                                    <tr>
                                        <td> Sống trong vùng có dịch lưu hành (sốt rét, covid19...)?</td>
                                        <td>   @Html.RadioButtonFor(expression: model => model.NguyCoHIV, value: true)</td>
                                        <td>  @Html.RadioButtonFor(expression: model => model.NguyCoHIV, value: false)</td>
                                    </tr>
                                    <tr>
