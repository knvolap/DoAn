
@model Models.EF.ThongTinCaNhan
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Thông tin cá nhân</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Blog Area =================-->
<script>
    $(function () {
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(5000).slideUp(500);
    });
</script>

<section class="blog_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @RenderPage("_leftMenu1.cshtml")
            </div>
            <div class="col-lg-8 mb-5 mb-lg-0">

                <div class="blog_left_sidebar">
                    <h3 class="mb-10">Thông tin cá nhân của bạn</h3>
                    <hr />
                    <div class="panel-body">
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                @TempData["AlertMessage"]
                            </div>
                        }
                    </div>
                    <div>

                        @using (Html.BeginForm("Index", "NguoiDung", new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel-body" style="font-weight: bold; text-align: center; color: red">
                                @if (@ViewBag.ThongBao != null)
                                {
                                    <label>@ViewBag.ThongBao </label>
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-8">
                                    <form action="#">

                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Họ và tên</label>
                                                        @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Số điện thoại</label>
                                                        @Html.EditorFor(model => model.soDT, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Tài khoản</label>
                                                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>CMND / CCCD </label>
                                                        @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Giới tính </label>
                                                     
                                                        @Html.DropDownListFor(model => model.gioiTinh, new[] { new SelectListItem { Text = "Nam", Value = "1" }, new SelectListItem { Text = "Nữ", Value = "0" } },
                                                       new { @class = "single-input", @disabled = "disabled" })

                                                    </div>
                                                </th>   
                                                <th class="col-lg-6">
                                                    <label>Ngày sinh </label>
                                                    @Html.EditorFor(model => model.ngaySinh, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <label>Lần hiến máu </label>
                                                        @Html.EditorFor(model => model.soLanHM, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <label>Nhóm máu </label>
                                                        @*@Html.DropDownListFor(model => model.nhomMau, new[] { new SelectListItem { Text = "Chưa biết"},
                                        new SelectListItem { Text = "A +"} , new SelectListItem { Text = "A -" } ,
                                        new SelectListItem { Text = "B +" } , new SelectListItem { Text = "B -" } ,
                                        new SelectListItem { Text = "AB +" } ,  new SelectListItem { Text = "AB -" } ,
                                        new SelectListItem { Text = "O +" } ,  new SelectListItem { Text = "O -" } },
                                        new { @class = "single-input" })*@
                                                        @Html.EditorFor(model => model.nhomMau, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <label>Trình độ học vấn </label>
                                                    @Html.EditorFor(model => model.trinhDo, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                </th>
                                                <th class="col-lg-6">
                                                    <label>Nghề nghiệp </label>
                                                    @Html.EditorFor(model => model.ngheNghiep, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:735px">
                                                    <label>Cơ quan / Trường lớp </label>
                                                    @Html.EditorFor(model => model.coQuanTH, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                </th>
                                            </tr>
                                            <tr>
                                                <th style="width:735px">
                                                    <label>Địa chỉ tạm trú</label>
                                                    @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "single-input", @readonly = "readonly" } })
                                                </th>
                                            </tr>
                                        </table>
                                    </form>
                                    <div class="text-center" style="margin-top:20px">
                                        <a href="@Url.Action("CapnhatTTCN", "NguoiDung", new { id = Model.IdTTCN })  " class="genric-btn primary-border radius">Hãy cập nhật thông tin</a>
                                    </div>
                                </div>
                            </div>
                         
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

