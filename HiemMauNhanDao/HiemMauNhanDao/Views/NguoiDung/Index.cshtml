@model Models.EF.ThongTinCaNhan
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Thông tin cá nhân</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Blog Area =================-->
<script>
    $(function () {
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(5000).slideUp(500);
    });
</script>
<div class="panel-body">
    @if (TempData["AlertMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlertType"] hide">
            @TempData["AlertMessage"]
        </div>
    }
</div>
<section class="blog_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @RenderPage("_leftMenu1.cshtml")
            </div>
            <div class="col-lg-8 mb-5 mb-lg-0">

                <div class="blog_left_sidebar">
                    <h3 class="mb-10">Vui lòng điền đầy đủ thông tin</h3>
                    <hr />
                    <div  >

                        @using (Html.BeginForm("Index", "NguoiDung", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div>
                                @if (@ViewBag.ThongBao != null)
                                {
                                    <label>@ViewBag.ThongBao </label>
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-8">
                                    <form action="#">
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <a>Họ và tên </a>

                                                        @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "single-input", @type = "text" } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <a>Số điện thoại</a>
                                                      
                                                        @Html.EditorFor(model => model.soDT, new { htmlAttributes = new { @class = "single-input", @type = "number" } })
                                                    </div>
                                                </th>
                                            </tr>
                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <a>Email</a>
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "single-input", @type = "text" } })

                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <a>CMND / CCCD </a>                                                    
                                                        @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "single-input", @type = "number" } })
                                                    </div>
                                                </th>
                                            </tr>

                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <a>Giới tính </a>
                                                        @Html.DropDownListFor(model => model.gioiTinh, new[] { new SelectListItem { Text = "Nam", Value = "M" },
                                                       new SelectListItem { Text = "Nữ", Value = "F" } }, new { @class = "single-input" })

                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <a>Ngày sinh </a>
                                                   
                                                    @Html.EditorFor(model => model.ngaySinh, new { htmlAttributes = new { @class = "single-input", @type = "date", @for = "datepicker" } })

                                                </th>
                                            </tr>

                                        </table>
                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <div>
                                                        <a>Lần hiến máu </a>
                                                        @*<input type="number" name="first_name" placeholder="0" onfocus="this.placeholder = ''"
                        onblur="this.placeholder = '0'" required="" class="single-input">*@
                                                        @Html.EditorFor(model => model.soLanHM, new { htmlAttributes = new { @class = "single-input", @type = "number" } })
                                                    </div>
                                                </th>
                                                <th class="col-lg-6">
                                                    <div>
                                                        <a>Nhóm máu </a>
                                                        @*<div class="icon"><i class="fa fa-plane" aria-hidden="true"></i></div>
                                                                <div class="form-select" id="default-select_1">
                                                                    <select>
                                                                        <option value="1">Chưa biết</option>
                                                                        <option value="1">A</option>
                                                                        <option value="1">B</option>
                                                                        <option value="1">AB</option>
                                                                        <option value="1">0</option>
                                                                    </select>
                                                                </div>*@
                                                        @Html.DropDownListFor(model => model.nhomMau, new[] { new SelectListItem { Text = "Chưa biết"},
                                                                              new SelectListItem { Text = "A +"} , new SelectListItem { Text = "A -" } ,
                                                                              new SelectListItem { Text = "B +" } , new SelectListItem { Text = "B -" } ,
                                                                              new SelectListItem { Text = "AB +" } ,  new SelectListItem { Text = "AB -" } ,
                                                                              new SelectListItem { Text = "O +" } ,  new SelectListItem { Text = "O -" } },
                                                                               new { @class = "single-input" })

                                                    </div>
                                                </th>
                                            </tr>

                                        </table>

                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:400px">
                                                    <a>Trình độ học vấn </a>
                                                  
                                                    @Html.EditorFor(model => model.trinhDo, new { htmlAttributes = new { @class = "single-input", @type = "text" } })

                                                </th>
                                                <th class="col-lg-6">
                                                    <a>Nghề nghiệp </a>
                                                  
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "single-input", @type = "text" } })

                                                </th>
                                            </tr>

                                        </table>


                                        <table class="mt-10">
                                            <tr>
                                                <th style="width:735px">
                                                    <a>Cơ quan / Trường lớp </a>
                                                    @Html.EditorFor(model => model.coQuanTH, new { htmlAttributes = new { @class = "single-input", @type = "text" } })

                                                </th>

                                            </tr>
                                            <tr >
                                                <th style="width:735px">
                                                    <a>Địa chỉ tạm trú</a>
                                                    @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "single-input", @type = "text" } })

                                                </th>

                                            </tr>
                                        </table>
                                    </form>

                                </div>
                            </div>
                            <div class="text-center " style="margin-top:20px">
                                <a class="genric-btn primary-border radius" href="#">Cập nhật</a>
                            </div>
                        }
                    </div>

                </div>

            </div>

        </div>
    </div>
</section>



